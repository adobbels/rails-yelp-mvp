

<div class="container">
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6 text-center" >
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Add a review", class:"btn btn-danger" %>
      <%= link_to "List", restaurants_path, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
